# =================================================================
# FRAUD DETECTION ENGINE - ENVIRONMENT CONFIGURATION EXAMPLE
# =================================================================

# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Application Configuration
APP_NAME=Fraud Detection Engine
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8000
APP_WORKERS=4
APP_SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://fraud_user:fraud_password@localhost:5432/fraud_detection
DATABASE_POOL_SIZE=20
DATABASE_POOL_MAX_OVERFLOW=0
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_RAW_TRANSACTIONS=raw-transactions
KAFKA_TOPIC_FRAUD_ALERTS=fraud-alerts
KAFKA_CONSUMER_GROUP=fraud-detection-group

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=fraud-detection
MLFLOW_MODEL_REGISTRY_URI=sqlite:///mlruns.db

# Model Configuration
MODEL_PATH=models/production/
MODEL_THRESHOLD=0.5
MODEL_VERSION=latest
MODEL_REFRESH_INTERVAL=3600

# API Security
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY_HEADER=X-API-Key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Logging Configuration
LOG_FILE_PATH=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_RECIPIENTS=admin@yourcompany.com,devops@yourcompany.com

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#fraud-detection-alerts

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=fraud-detection-data

# Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=fraud-detection-engine
DOCKER_IMAGE_TAG=latest

# Feature Flags
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_MODEL_RETRAINING=true
ENABLE_ADVANCED_ANALYTICS=true

# Performance Configuration
MAX_BATCH_SIZE=1000
PROCESSING_TIMEOUT=300
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,fraud-detection.local
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
SSL_REQUIRED=false
SECURE_COOKIES=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///test.db
TEST_REDIS_URL=redis://localhost:6379/1
